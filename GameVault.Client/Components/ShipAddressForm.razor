<div class="row g-3">
    <div class="col-md-6">
        <label for="postalCode" class="form-label">
            ZIP Code <span class="text-danger">*</span>
        </label>
        <input 
            id="postalCode"
            type="text" 
            class="form-control"
            value="@Address.PostalCode"
            @oninput="@(async (e) => { Address.PostalCode = e.Value?.ToString() ?? ""; await NotifyChange(); })"
            maxlength="10"
            placeholder="12345"
            required />
    </div>

    <div class="col-md-6">
        <label for="country" class="form-label">
            Country <span class="text-danger">*</span>
        </label>
        <input 
            id="country"
            type="text" 
            class="form-control"
            value="@Address.Country"
            autocomplete="country-name"
            disabled
            required />
    </div>
</div>

@code {
    [Parameter]
    public Address Address { get; set; } = new();

    [Parameter]
    public EventCallback<Address> OnAddressChanged { get; set; }

    private async Task NotifyChange()
    {
        await OnAddressChanged.InvokeAsync(Address);
    }
}