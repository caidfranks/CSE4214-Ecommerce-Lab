@using GameVault.Shared.Models

<div class="mb-3">
    <label for="street" class="form-label">
        Street Address <span class="text-danger">*</span>
    </label>
    <input 
        id="street"
        type="text" 
        class="form-control"
        value="@Address.Street"
        @oninput="@(async (e) => { Address.Street = e.Value?.ToString() ?? ""; await NotifyChange(); })"
        placeholder="123 Main St"
        required />
</div>

<div class="row g-3 mb-3">
    <div class="col-md-6">
        <label for="city" class="form-label">
            City <span class="text-danger">*</span>
        </label>
        <input 
            id="city"
            type="text" 
            class="form-control"
            value="@Address.City"
            @oninput="@(async (e) => { Address.City = e.Value?.ToString() ?? ""; await NotifyChange(); })"
            placeholder="Memphis"
            required />
    </div>

