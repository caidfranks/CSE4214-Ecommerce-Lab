@using GameVault.Client.Components
@inject Services.AuthService AuthService
@inject NavigationManager Navigation
@implements IDisposable

<nav class="navbar navbar-dark bg-dark">
    <div class="navbar-container">
        <div class="navbar-left">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <i class="bi bi-house-door-fill me-1"></i> Home
            </NavLink>

            @if (AuthService.IsAuthenticated)
            {
                @if (IsCustomer)
                {
                    <NavLink class="nav-link" href="orders">
                        <i class="bi bi-clock-history me-1"></i> Order History
                    </NavLink>
                }

                @if (IsVendor)
                {
                    @* <NavLink class="nav-link" href="vendor">
                        <i class="bi bi-shop me-1"></i> Vendor Dashboard
                    </NavLink> *@
                    <NavLink class="nav-link" href="vendor/listings">
                        <i class="bi bi-list me-1"></i> View Listings
                    </NavLink>
                    <NavLink class="nav-link" href="vendor/listings/create">
                        <i class="bi bi-plus-circle me-1"></i> Create Listing
                    </NavLink>
                    <NavLink class="nav-link" href="vendor/orders">
                        <i class="bi bi-box-seam me-1"></i> Orders & Returns
                    </NavLink>
                }
                else if (IsAdmin)
                {
                    @* <NavLink class="nav-link" href="adminLanding">
                        <i class="bi bi-shield-check me-1"></i> Admin Dashboard
                    </NavLink> *@
                    <NavLink class="nav-link" href="viewListings">
                        <i class="bi bi-clipboard-check me-1"></i> Audit Listings
                    </NavLink>
                    <NavLink class="nav-link" href="manageAccounts">
                        <i class="bi bi-people me-1"></i> Audit Accounts
                    </NavLink>
                    <NavLink class="nav-link" href="actionLogs">
                        <i class="bi bi-journal-text me-1"></i> Action Logs
                    </NavLink>
                }
            }
        </div>

        <div class="navbar-center">
            <a class="navbar-brand" href="">
                <i class="bi bi-controller me-2"></i>
                GameVault
            </a>
        </div>

        <div class="navbar-right">
            @if (AuthService.IsAuthenticated)
            {
                if (IsCustomer){
                    <CartButton />
                }
                
                <NavLink class="nav-link" href="profile">
                    <i class="bi bi-person me-1"></i> Profile
                </NavLink>
                <button class="nav-link btn-logout" @onclick="HandleLogout">
                    <i class="bi bi-box-arrow-right me-1"></i> Logout
                </button>
            }
            else
            {
                <NavLink class="nav-link" href="login">
                    <i class="bi bi-box-arrow-in-right me-1"></i> Login
                </NavLink>
                <NavLink class="nav-link" href="register/customer">
                    <i class="bi bi-person-plus me-1"></i> Sign Up
                </NavLink>
            }
        </div>
    </div>
</nav>

<style>
    .navbar {
        padding: 0.5rem 1rem;
        background: linear-gradient(135deg, #1e293b 0%, #334155 100%) !important;
    }

    .navbar-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
        max-width: none;
        margin: 0 auto;
        position: relative; 
    }

    .navbar-left {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        flex: 1;
        justify-content: flex-start;
    }

    .navbar-center {
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
    }

    .navbar-brand {
        font-weight: 700;
        font-size: 1.5rem;
        color: white !important;
        text-decoration: none;
        transition: color 0.2s ease;
        display: flex;
        align-items: center;
        white-space: nowrap;
    }

    .navbar-brand:hover {
        color: #e2e8f0 !important;
    }

    .navbar-right {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        flex: 1;
        justify-content: flex-end;
    }

    .nav-link {
        color: rgba(255, 255, 255, 0.9) !important;
        padding: 0.5rem 1rem;
        border-radius: 0.375rem;
        transition: all 0.2s ease;
        text-decoration: none;
        white-space: nowrap;
        display: inline-flex;
        align-items: center;
    }

    .nav-link:hover {
        background: rgba(255, 255, 255, 0.1);
        color: white !important;
    }

    .nav-link.active {
        background: rgba(255, 255, 255, 0.15);
        font-weight: 600;
        color: white !important;
    }

    .btn-logout {
        background: none;
        border: none;
        cursor: pointer;
        font-size: 1rem;
    }

    .btn-logout:hover {
        background: rgba(255, 87, 87, 0.2) !important;
    }

    .user-display {
        color: rgba(255, 255, 255, 0.9);
        padding: 0.5rem 1rem;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 0.375rem;
        font-weight: 600;
        white-space: nowrap;
        display: inline-flex;
        align-items: center;
    }
</style>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;
    private bool IsCustomer => AuthService.CurrentUser?.Type == Shared.Models.AccountType.Customer;

    private bool IsVendor => AuthService.CurrentUser?.Type == Shared.Models.AccountType.Vendor;
    private bool IsAdmin => AuthService.CurrentUser?.Type == Shared.Models.AccountType.Admin;

    protected override void OnInitialized()
    {
        AuthService.OnAuthStateChanged += HandleAuthStateChanged;
    }

    private void HandleAuthStateChanged()
    {
        StateHasChanged();
    }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private async Task HandleLogout()
    {
        await AuthService.Logout();
        Navigation.NavigateTo("/");
    }

    public void Dispose()
    {
        AuthService.OnAuthStateChanged -= HandleAuthStateChanged;
    }
}